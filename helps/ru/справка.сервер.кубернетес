SUDO='sudo '
[ $(id -un) == root ] && SUDO=''
CMD="urpmi"
[ -f /usr/bin/dnf ] && CMD="dnf install"
INSTALLCMD=${SUDO}${CMD}

+ Kubernetes
_ "Установка" "$INSTALLCMD kubelet kubeadm kubectl docker docker-containerd"
_ "Инструкция по Kubernetes в росе" "http://wiki.rosalab.ru/ru/index.php/%D0%AD%D0%BA%D1%81%D0%BF%D0%BB%D1%83%D0%B0%D1%82%D0%B0%D1%86%D0%B8%D1%8F_Kubernetes"
