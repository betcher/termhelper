SUDO='sudo '
[ $(id -un) == root ] && SUDO=''
CMD="urpmi"
[ -f /usr/bin/dnf ] && CMD="dnf install"
INSTALLCMD=${SUDO}${CMD}

+Ipa-client

_ "Настройка ipa-client в росе" "http://wiki.rosalab.ru/ru/index.php/%D0%9D%D0%B0%D1%81%D1%82%D1%80%D0%BE%D0%B9%D0%BA%D0%B0_FreeIPA_%D0%BA%D0%BB%D0%B8%D0%B5%D0%BD%D1%82%D0%B0"
_ "Установка ipa-client" "$INSTALLCMD ipa-client"