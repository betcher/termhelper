SUDO='sudo '
[ $(id -un) == root ] && SUDO=''
CMD="urpmi"
[ -f /usr/bin/dnf ] && CMD="dnf install"
INSTALLCMD=${SUDO}${CMD}

+ FreeIPA server
_ "Настройка freeIPA сервера в росе" "http://wiki.rosalab.ru/ru/index.php/Настройка_FreeIPA_сервера"
_ "Установка freeIPA сервера" "$INSTALLCMD install ipa-server"


