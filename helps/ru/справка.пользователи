+  Пользователи и группы
_ "создать новую группу" "groupadd group_name"
_ "удалить группу" "groupdel group_name"
_ "переименовать группу" "groupmod -n new_group_name old_group_name"
_ "добавить пользователя в группу" "usermod -aG sudo user1"
_ "удалить пользователя из группы" "gpasswd -d user1 group_name"
_ "создать пользователя с расширенными настройками" "useradd -c \"Nome Cognome\" -g admin -d /home/user1 -s /bin/bash user1"
_ "создать пользователя (минимальные настройки)" "useradd user1"
_ "удалить пользователя и его домашний каталог" "userdel -r user1"
_ "изменить атрибуты пользователя" "usermod -c \"User FTP\" -g system -d /ftp/user1 -s /bin/nologin user1"
_ "сменить пароль текущего пользователя" "passwd"
_ "сменить пароль другого пользователя (только root)" "passwd user1"
_ "установить срок действия учетной записи" "chage -E 2005-12-31 user1"
_ "проверить целостность файлов /etc/passwd и /etc/shadow" "pwck"
_ "проверить целостность файла /etc/group" "grpck"
_ "изменить первичную группу пользователя" "newgrp [-] group_name"
