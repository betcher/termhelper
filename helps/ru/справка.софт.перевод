echo -e "   Преобраз-е .po в .gmo:\tmsgfmt ru.po -o ru.gmo"
echo -e "   Преобраз-е .po в .mo:\tmsgfmt ru.po -o ru.mo"
echo -e "   Преобраз-е .mo в .po:\tmsgunfmt ru.mo -o ru.po"
echo -e "   Преобраз-е .gmo в .po:\tmsgunfmt ru.gmo -o ru.po"
echo -e "   "
echo -e "   Консольный переводчик:\t\tsudo urpmi translate-shell"
echo -e "   С англ. на рус.:\t\t\ttrans -b 'text'"
echo -e "   С рус. на англ.:\t\t\ttrans -b -s ru -t en 'текст'"
echo -e "   С англ. на рус. со звуком:\t\ttrans -p -b 'text'"
echo -e "   С рус. на англ. со звуком:\t\ttrans -p -b -s ru -t en 'текст'"
echo -e "   Англ. со звуком на рус.:\t\ttrans -speak -b 'text'"
echo -e "   Много с англ. на рус. (вых. Ctrl+C):\ttrans -b"
