if [ -f /usr/bin/urpmi ] ;then
echo -e "
U  Установить без учёта зависимостей:\turpmi --allow-force пакет
R  Установить без учёта зависимостей:\turpmi -a --allow-nodeps пакет
P  Установить без учёта зависимостей:\trpm -ivh --nodeps --force пакет
M  Удалить без учёта зависимостей:\trpm -e --nodeps пакет
I  Переустановить:\t\t\turpmi --replacepkgs пакет
   Привести пакеты к репозиториям:\turpm-reposync

   Проверить пакет на ошибки:\t\trpmlint *rpm
   rpm, для которых нужен пакет:\turpmq --whatrequires пакет |sort -u
   rpm, которые нужны пакету:\t\turpmq --requires-recursive пакет
   Ссылка на rpm-пакет:\t\t\turpmq --sources пакет
   Ссылка на src.rpm-пакет:\t\turpmq --sourcerpm пакет
   Описание пакета:\t\t\turpmq -ai пакет
   Варианты названий Requires:\t\turpmq --provides пакет
"
fi
if [ -f /usr/bin/dnf ] ; then
echo -e "
D  Установить без учёта зависимостей:\tdnf install --skip-broken пакет
N  
F 
"
fi
